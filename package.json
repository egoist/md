{
  "name": "marked3",
  "version": "0.5.0",
  "description": "A markdown parser and compiler. Built for speed.",
  "repository": {
    "url": "egoist/marked3",
    "type": "git"
  },
  "main": "dist/marked3.common.js",
  "unpkg": "dist/marked3.js",
  "module": "dist/marked3.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npm run lint && BABEL_ENV=test ava",
    "prepublish": "npm run build",
    "lint": "xo src/*.js",
    "fix": "xo src/*.js --fix",
    "build": "bili --format umd,cjs,es,umdCompress"
  },
  "author": "egoist <0x142857@gmail.com>",
  "license": "MIT",
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ],
        "plugins": [
          "transform-async-to-generator"
        ]
      }
    }
  },
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "bili": "^0.17.4",
    "eslint-config-rem": "^3.1.0",
    "mz": "^2.6.0",
    "xo": "^0.18.2"
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "xo": {
    "extends": "rem",
    "rules": {
      "complexity": 0,
      "no-cond-assign": 0,
      "no-unexpected-multiline": 0,
      "func-call-spacing": 0,
      "no-useless-escape": 0
    }
  },
  "dependencies": {
    "slugo": "^0.2.1"
  }
}
